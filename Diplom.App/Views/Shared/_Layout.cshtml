<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Diplom.App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/backImage.css"/>
    <link rel="stylesheet" href="~/Diplom.App.styles.css" asp-append-version="true"/>
</head>
<body class="backgroundImage">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Fifth navbar example">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">МедиБлок</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Главная</a>
                </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                {
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="User" asp-action="GetUsers" asp-route-role="1">Список врачей</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="User" asp-action="GetUsers" asp-route-role="2">Список пациентов</a>
                    </li>
                }
                @if (User.IsInRole("Patient"))
                {
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="User" asp-action="GetUsers" asp-route-role="1">Список врачей</a>
                    </li>
                }
                

            </ul>

            @if (!User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active text-white" asp-controller="Account" asp-action="Login">
                            Вход
                        </a>
                    </li>
                </ul>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Profile" asp-action="Detail" asp-route-login="@User.Identity.Name">
                            @User.Identity.Name
                        </a>
                    </li>
                    
                    <li class="nav-item d-flex justify-content-center"> 
                        <a asp-controller="Profile" asp-action="Notifications" asp-route-login="@User.Identity.Name">
                            <img id="notificationImage" src="~/Pictures/notification.png" class="img-fluid pt-2" /> 
                        </a>
                    </li>
                
                    <li class="nav-item">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="nav-link" style="background: none; border: none; cursor: pointer;">
                                <span style="color: inherit;">Выход</span>
                            </button>
                        </form>
                    </li>
                </ul>
            }
        </div>
    </nav>
</header>
<div class="">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Diplom.App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    let notificationImage = document.getElementById("notificationImage");

    let userName = "@User.Identity.Name";

    // Формируем URL для AJAX запроса
    let url = '@Url.Action("GetNotificationStatus", "Profile")' + '?login=' + encodeURIComponent(userName);

    // Делаем AJAX запрос при загрузке страницы
    fetch(url)
        .then(response => response.json())
        .then(data => {
            // Получаем статус уведомлений
            var notificationStatus = data.description;

            // В зависимости от статуса, меняем изображение
            if (notificationStatus) {
                notificationImage.src = "/Pictures/bell.png"; // Путь к изображению с уведомлением
            } else {
                notificationImage.src = "/Pictures/notification.png"; // Путь к обычному изображению без уведомления
            }
        })
        .catch(error => {
            console.error('Ошибка при загрузке статуса уведомлений:', error);
        });

</script>