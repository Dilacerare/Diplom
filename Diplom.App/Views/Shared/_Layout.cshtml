                            @*     <div class="container"> *@
                            @*         <div class="row"> *@
                            @*             <div class="col-md-12"> *@
                            @*                 <ul class="nav flex-column paragraphHome"> *@
                            @*                     <li class="nav-item text-center"> *@
                            @*                         $1$ <a class="nav-link active text-white" asp-controller="Account" asp-action="Register"> #1# *@
                            @*                         Регистрация *@
                            @*                         $1$ </a> #1# *@
                            @*                     </li> *@
                            @*                     <li class="nav-item"> *@
                            @*                         <a class="nav-link active text-white" asp-controller="Account" asp-action="Login"> *@
                            @*                             Вход *@
                            @*                         </a> *@
                            @*                     </li> *@
                            @*                 </ul> *@
                            @*             </div> *@
                            @*         </div> *@
                            @*     </div> *@
                            @* </div> *@
                        </li>    
                    }
            </div>
            <div>
                @if (User.Identity.IsAuthenticated)
                    {
                        <p>@User.Identity.Name</p>
                        @* <a asp-controller="Profile" asp-action="Detail" asp-route-userName="@User.Identity.Name"> *@
                        @*     <svg style="color: black;" xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16"> *@
                        @*         <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/> *@
                        @*     </svg> *@
                        @* </a> *@
                    
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <input class="btn btn-danger rounded" style="font-family:'Comic Sans MS'; font-weight: bold; font-size:20px;" type="submit" value="Выход" />
                        </form>
                    }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Diplom.App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>